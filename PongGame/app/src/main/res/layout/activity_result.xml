<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:background="@color/pong_bg"
                tools:context="com.junjunguo.ponggame.Result">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="win \n \n1 \n \n 2"
        android:textColor="@color/pong_head"
        android:textSize="24dp"
        android:id="@+id/score_result"
        android:gravity="center"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/start_new_game"
        android:layout_below="@id/score_result"
        android:gravity="center"
        android:text="New Game"
        android:layout_centerHorizontal="true"
        android:background="@drawable/custom_button"
        android:layout_marginTop="40dp"
        android:onClick="startNewGame"
        android:width="200dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/quit_game"
        android:layout_below="@+id/start_new_game"
        android:gravity="center"
        android:text="Quit"
        android:layout_centerHorizontal="true"
        android:background="@drawable/custom_button"
        android:onClick="quitGame"
        android:layout_marginTop="20dp"
        android:width="200dp"/>

</RelativeLayout>
